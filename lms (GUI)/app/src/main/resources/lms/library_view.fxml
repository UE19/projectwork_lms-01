<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lms.controller.LibraryController">
    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding><Insets top="10" bottom="10"/></padding>
            <Label text="Library Management System (GUI)" textFill="#2c3e50">
                <font><Font name="System Bold" size="24.0"/></font>
            </Label>
            <Label fx:id="statusLabel" text="Welcome, Librarian" textFill="blue"/>
        </VBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            
            <Tab text="Books Inventory">
                <VBox spacing="10" >
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="bookIdField" promptText="Book ID" prefWidth="80"/>
                        <TextField fx:id="titleField" promptText="Title"/>
                        <TextField fx:id="authorField" promptText="Author"/>
                        <Button text="Add Book" onAction="#handleAddBook"/>
                        <Button text="Remove Book" onAction="#handleRemoveBook" style="-fx-background-color: #ffcccc;"/>
                    </HBox>
                    
                    <TableView fx:id="bookTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                            <TableColumn fx:id="colTitle" text="Title" prefWidth="150"/>
                            <TableColumn fx:id="colAuthor" text="Author" prefWidth="150"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="80"/>
                            <TableColumn fx:id="colIssuedTo" text="Issued To" prefWidth="80"/>
                            <TableColumn fx:id="colReturnDate" text="Return Date" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <Tab text="Circulation (Issue/Return)">
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100"/>
                        <ColumnConstraints minWidth="200"/>
                    </columnConstraints>

                    <Label text="ISSUE BOOK" style="-fx-font-weight: bold" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    
                    <Label text="Book ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="issueBookIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Student ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="issueStudentIdField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Days:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <Spinner fx:id="daysSpinner" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Button text="Issue Book" onAction="#handleIssue" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Separator GridPane.rowIndex="5" GridPane.columnSpan="2"/>

                    <Label text="RETURN BOOK" style="-fx-font-weight: bold" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    
                    <Label text="Book ID:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                    <TextField fx:id="returnBookIdField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                    <Button text="Return Book" onAction="#handleReturn" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
                </GridPane>
            </Tab>

            <Tab text="Students &amp; Fines">
                 <VBox spacing="10" >
                    <HBox spacing="10">
                        <TextField fx:id="studentIdField" promptText="ID (e.g. S1)"/>
                        <TextField fx:id="studentNameField" promptText="Name"/>
                        <Button text="Register Student" onAction="#handleAddStudent"/>
                    </HBox>
                    <TableView fx:id="studentTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colStudentId" text="ID" prefWidth="80"/>
                            <TableColumn fx:id="colStudentName" text="Name" prefWidth="150"/>
                            <TableColumn fx:id="colFine" text="Total Fine (â‚¹)" prefWidth="100"/>
                        </columns>
                    </TableView>
                 </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>